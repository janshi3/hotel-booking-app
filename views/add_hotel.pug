extend layout

block content
    a(href="/admin")
        button(type="button" class="button_small") Back to admin
    h2= title

    form(action="" method="POST")
        .form_input
            label(for="hotel_name") Hotel name:
            input(type="text" name="hotel_name" required)
        .form_input
            label(for="hotel_description") Hotel description
            textarea#hotel_description(name="hotel_description", cols="30", rows="10" required)
        .form_input
            label(for="image") Hotel image
            input#image(type="file" name="image" required)
        .form_input
            label(for="star_rating") Star rating:
            input(type="number" name="star_rating" min="1" max="5" required)
        .form_input
            label(for="country") Country:
            input#country(type="text" name="country" required)
        .form_input
            label(for="cost_per_night") Cost per night:
            input#cost_per_night(type="number" name="cost_per_night" required)
        .form_input
            label(for="avalible") Avalible:
            input#avalible(type="radio" name="avalible" value="true" checked)
        .form_input
            label(for="unavalible") Unavalible:
            input#unavalible(type="radio" name="avalible" value="false")
        .form_input
            button(type="submit" class="button_small")  CONFIRM